<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="solutions.empire.wallyces">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.QuadroProfessorActivity" />
        <activity android:name=".view.BuscarProfessorActivity" />
        <activity android:name=".view.CadastroProfessorActivity" />
        <activity android:name=".view.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.AvisoActivity" />
        <activity android:name=".view.CadastroAvisoActivity" />
        <activity android:name=".view.SugestaoActivity" />
        <activity android:name=".view.CadastroAlunoActivity" />
        <activity android:name=".view.CadastroProvaActivity" />
        <activity android:name=".view.ProvaActivity" />
        <activity android:name=".view.TransferenciaActivity" />
        <activity android:name=".view.ConsumidorQrCodeActivity"></activity>
    </application>

</manifest>