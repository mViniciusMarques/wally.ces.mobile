<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nome_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Professor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/disciplina_professor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira sua disciplina"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000"
        android:popupBackground="#8c000000"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lbl_sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sala:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dropdown_sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lbl_turno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turno:"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_turno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/turno_manha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Manhã" />

        <RadioButton
            android:id="@+id/turno_tarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tarde" />

        <RadioButton
            android:id="@+id/turno_noite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Noite" />
    </RadioGroup>

    <TextView
        android:id="@+id/lbl_horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horários:"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dropdown_horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <Switch
        android:id="@+id/seletor_aviso"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="Inserir Aviso" />

    <TextView
        android:id="@+id/lbl_aviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aviso:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_aviso_cp"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:drawingCacheQuality="auto"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Insira seu aviso"
        android:inputType="textMultiLine"
        android:maxLength="144" />


</LinearLayout>
